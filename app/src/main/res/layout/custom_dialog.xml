<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:textSize="18sp"
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        android:text="WYBIERZ CZAS DAWKOWANIA"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:textColor="@color/black"/>

    <com.google.android.material.chip.ChipGroup
        android:layout_marginStart="15dp"
        android:id="@+id/chips"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        app:chipSpacingHorizontal="10dp"
        android:layout_height="wrap_content">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip1"
            android:checkable="true"
            android:textSize="12sp"
            android:textAlignment="center"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="przed posiłkiem"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chip3"
            android:checkable="true"
            android:textSize="12sp"
            android:textAlignment="center"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="po posiłku"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chip4"
            android:checkable="true"
            android:textSize="12sp"
            android:textAlignment="center"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="przed śniadaniem"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/chip5"
            android:checkable="true"
            android:textSize="12sp"
            android:layout_width="140dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="po śniadaniu"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/chip6"
            android:checkable="true"
            android:textSize="12sp"
            android:textAlignment="center"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="przed obiadem"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chip8"
            android:checkable="true"
            android:textSize="12sp"
            android:textAlignment="center"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="po obiedzie"/>
        <com.google.android.material.chip.Chip
            android:id="@+id/chip9"
            android:textSize="12sp"
            android:checkable="true"
            android:textAlignment="center"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="przed  kolacją"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chip11"
            android:textSize="12sp"
            android:checkable="true"
            android:textAlignment="center"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="po kolacji"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chip12"
            android:textSize="12sp"
            android:checkable="true"
            android:textAlignment="center"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="na czczo"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chip13"
            android:textSize="12sp"
            android:checkable="true"
            android:textAlignment="center"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="przed snem"/>


    </com.google.android.material.chip.ChipGroup>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:id="@+id/end"
        android:backgroundTint="@color/black"
        android:text="zatwierdź"
        android:scaleX="0.9"
        android:scaleY="0.9"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
       app:layout_constraintTop_toBottomOf="@id/chips"
        android:layout_margin="30dp"/>

    <com.google.android.material.button.MaterialButton
        android:text="   anuluj   "
        android:id="@+id/exit"
        android:scaleX="0.9"
        android:scaleY="0.9"
        android:backgroundTint="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chips"
        android:layout_margin="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>