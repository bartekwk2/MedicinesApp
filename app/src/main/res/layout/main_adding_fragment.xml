<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/motion"
        app:layoutDescription="@xml/main_adding_fragment_scene">

        <TextView
            android:fontFamily="@font/poppinsbold"
            android:id="@+id/text"
            android:clickable="true"
            android:elevation="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:text="Dodawanie lekarstwa"/>


        <TextView
            android:fontFamily="@font/poppinsbold"
            android:id="@+id/text2"
            android:textColor="@color/black"
            android:clickable="true"
            android:alpha="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"
            android:textSize="20sp"
            android:text="PODSUMOWANIE"/>

        <com.google.android.material.card.MaterialCardView
            app:cardBackgroundColor="@color/p"
            android:layout_width="match_parent"
            android:id="@+id/card"
            android:elevation="2dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/text"
            app:layout_constraintBottom_toTopOf="@id/cardView"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            />
        <TextView
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nazwa leku: "
            android:elevation="2dp"
            android:textColor="@color/white"
            android:id="@+id/namePill"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="@id/card"
            app:layout_constraintTop_toTopOf="@id/card"/>

        <TextView
            app:layout_constraintEnd_toEndOf="@id/card"
            app:layout_constraintHorizontal_bias="0"
            android:layout_marginStart="50dp"
            android:scrollbars = "horizontal"
            android:maxLines="1"
            android:elevation="2dp"
            android:layout_width="wrap_content"
            android:id="@+id/nameOfPill"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/namePill"
            app:layout_constraintBottom_toBottomOf="@id/namePill"
            app:layout_constraintStart_toEndOf="@id/namePill"
            android:textColor="@color/white"
            />

        <TextView
            android:elevation="2dp"
            android:textColor="@color/white"
            android:id="@+id/namePill2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/card"
            app:layout_constraintTop_toBottomOf="@id/namePill"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:text="Dni dawkowania:"/>

        <TextView
            android:elevation="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nameOfPill2"
            app:layout_constraintTop_toTopOf="@id/namePill2"
            app:layout_constraintBottom_toBottomOf="@id/namePill2"
            app:layout_constraintStart_toEndOf="@id/namePill2"
            android:layout_marginStart="23dp"
            android:textColor="@color/white"
            />

        <TextView
            android:elevation="2dp"
            android:textColor="@color/white"
            android:id="@+id/namePill3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/card"
            app:layout_constraintTop_toBottomOf="@id/namePill2"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:text="Czas dawkowania:"/>

        <TextView
            android:elevation="2dp"
            android:scrollbars = "vertical"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:id="@+id/nameOfPill3"
            app:layout_constraintTop_toTopOf="@id/namePill3"
            app:layout_constraintBottom_toBottomOf="@id/namePill3"
            app:layout_constraintStart_toEndOf="@id/namePill3"
            android:layout_marginStart="16dp"
            />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:background="#47A6AE"
            android:id="@+id/cardView"
            app:strokeWidth="1dp"
            android:elevation="10dp"
            app:strokeColor="@color/proba"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="60dp"
            android:layout_height="wrap_content">
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="380dp" />
        </com.google.android.material.card.MaterialCardView>

        <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardView"
            android:id="@+id/dots_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:dotsColor="#0C74A4"
            app:dotsCornerRadius="8dp"
            app:dotsSize="16dp"
            app:dotsSpacing="4dp"
            app:dotsWidthFactor="2.5"
            app:selectedDotColor="#900C0C"
            app:progressMode="true" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:cardElevation="3dp"
            android:id="@+id/cardView2"
            app:shapeAppearance="@style/My3ShapeAppearance.App.MediumComponent"
            android:elevation="1dp"
            app:strokeWidth="2dp"
            app:cardBackgroundColor="@color/p5"
            app:layout_constraintStart_toStartOf="@id/card"
            app:layout_constraintTop_toTopOf="@id/card"
            app:layout_constraintEnd_toEndOf="@id/card"
            android:layout_marginTop="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp">
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/cardView2text"
            android:text="Dni dawkowania"
            android:elevation="3dp"
            android:textColor="@color/white"
            android:alpha="0"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/cardView22"
            app:layout_constraintTop_toBottomOf="@id/cardView2"
            app:layout_constraintStart_toStartOf="@id/cardView22"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/cardView3text"
            android:text="Godziny dawkowania"
            android:elevation="3dp"
            android:textColor="@color/white"
            android:alpha="0"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/cardView23"
            app:layout_constraintTop_toBottomOf="@id/cardView22"
            app:layout_constraintStart_toStartOf="@id/cardView23"
            android:layout_margin="10dp"/>


        <com.hanks.htextview.evaporate.EvaporateTextView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:paddingTop="8dp"
            android:id="@+id/abcd"
            android:elevation="3dp"
            android:alpha="0"
            tools:text="APAP"
            android:textSize="24sp"
            android:layout_marginTop="70dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/cardView2"
            app:layout_constraintEnd_toEndOf="@id/cardView2"
            android:textColor="@color/black" />
        <com.hanks.htextview.evaporate.EvaporateTextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:paddingTop="8dp"
            android:id="@+id/abcde"
            android:elevation="3dp"
            android:alpha="0"
            tools:text="APAP"
            android:textSize="16sp"
            android:layout_marginTop="120dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@id/cardView2"
            app:layout_constraintEnd_toEndOf="@id/cardView2"
            android:textColor="@color/black" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/cardView2"
            app:layout_constraintBottom_toBottomOf="@id/cardView2"
            app:layout_constraintEnd_toEndOf="@id/cardView2"
            android:elevation="3dp"
            android:layout_marginEnd="5dp"
            android:alpha="0"
            android:id="@+id/redo"
            android:src="@drawable/ic_redo"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/cardView2"
            app:layout_constraintStart_toStartOf="@id/cardView2"
            app:layout_constraintBottom_toBottomOf="@id/cardView2"
            android:elevation="3dp"
            android:layout_marginStart="5dp"
            android:alpha="0"
            android:id="@+id/undo"
            android:src="@drawable/ic_undo"/>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:alpha="0"
            android:layout_height="100dp"
            android:id="@+id/cardView22"
            app:shapeAppearance="@style/My3ShapeAppearance.App.MediumComponent"
            app:cardElevation="2dp"
            app:strokeWidth="2dp"
            app:cardBackgroundColor="@color/p3"
            app:layout_constraintStart_toStartOf="@id/card"
            app:layout_constraintTop_toTopOf="@id/card"
            app:layout_constraintEnd_toEndOf="@id/card"
            android:layout_marginTop="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp">
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:alpha="0"
            android:layout_height="100dp"
            android:id="@+id/cardView23"
            app:shapeAppearance="@style/My3ShapeAppearance.App.MediumComponent"
            app:cardElevation="1dp"
            app:strokeWidth="2dp"
            app:cardBackgroundColor="@color/p1"
            app:layout_constraintStart_toStartOf="@id/card"
            app:layout_constraintTop_toTopOf="@id/card"
            app:layout_constraintEnd_toEndOf="@id/card"
            android:layout_marginTop="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp">
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:alpha="0"
            android:elevation="3dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/summaryDays"
            android:text="DUPA"
            app:layout_constraintTop_toBottomOf="@id/cardView2text"
            app:layout_constraintStart_toStartOf="@id/cardView22"
            app:layout_constraintEnd_toEndOf="@id/cardView22"
            app:layout_constraintBottom_toBottomOf="@id/cardView22"/>

        <TextView
            android:alpha="0"
            android:elevation="3dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/summaryHours"
            android:text="DUPA"
           app:layout_constraintTop_toBottomOf="@id/cardView3text"
            app:layout_constraintStart_toStartOf="@id/cardView23"
            app:layout_constraintEnd_toEndOf="@id/cardView23"
            app:layout_constraintBottom_toBottomOf="@id/cardView23"/>


        <TextView
            android:id="@+id/cardView3text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Potwierdź"
            android:alpha="0"
            app:layout_constraintStart_toStartOf="@id/cardView3"
            app:layout_constraintEnd_toEndOf="@id/cardView3"
            app:layout_constraintBottom_toTopOf="@id/cardView3"
            android:layout_marginBottom="5dp"
            android:textColor="@color/white"
            android:elevation="3dp"/>
        <TextView
            android:id="@+id/cardView3text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edytuj"
            android:alpha="0"
            app:layout_constraintStart_toStartOf="@id/cardView4"
            app:layout_constraintEnd_toEndOf="@id/cardView4"
            app:layout_constraintBottom_toTopOf="@id/cardView4"
            android:layout_marginBottom="5dp"
            android:textColor="@color/white"
            android:elevation="3dp"/>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:clickable="true"
            android:focusable="true"
            android:alpha="0"
            android:layout_height="45dp"
            android:id="@+id/cardView3"
            app:layout_constraintStart_toEndOf="@id/cardView4"
            app:shapeAppearance="@style/My6ShapeAppearance.App.MediumComponent"
            android:elevation="1dp"
            app:strokeWidth="2dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/card"
            app:layout_constraintEnd_toEndOf="@id/card"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="60dp"
            >
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:clickable="true"
            android:alpha="0"
            android:layout_height="45dp"
            android:id="@+id/cardVie3"
            app:layout_constraintStart_toStartOf="@id/cardView3"
            app:shapeAppearance="@style/My6ShapeAppearance.App.MediumComponent"
            android:elevation="1dp"
            app:strokeWidth="2dp"
            app:cardBackgroundColor="@color/p2"
            app:layout_constraintBottom_toBottomOf="@id/card"
            app:layout_constraintEnd_toEndOf="@id/card"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="60dp"
            >
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:clickable="true"
            android:alpha="0"
            android:layout_height="45dp"
            android:id="@+id/cardView4"
            app:shapeAppearance="@style/My5ShapeAppearance.App.MediumComponent"
            android:elevation="1dp"
            app:strokeWidth="2dp"
            app:layout_constraintEnd_toStartOf="@id/cardView3"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintStart_toStartOf="@id/card"
            app:layout_constraintBottom_toBottomOf="@id/card"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="60dp"
            >
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:alpha="0"
            android:clickable="true"
            android:layout_height="45dp"
            android:id="@+id/cardVie4"
            app:shapeAppearance="@style/My5ShapeAppearance.App.MediumComponent"
            android:elevation="2dp"
            app:strokeWidth="2dp"
            app:layout_constraintEnd_toEndOf="@id/cardView4"
            app:cardBackgroundColor="@color/p2"
            app:layout_constraintStart_toStartOf="@id/card"
            app:layout_constraintBottom_toBottomOf="@id/card"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="60dp"
            >
        </com.google.android.material.card.MaterialCardView>

        <ImageView
            android:clickable="true"
            android:focusable="true"
            android:alpha="0"
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/cardView3"
            app:layout_constraintBottom_toBottomOf="@id/cardView3"
            android:elevation="2dp"
            android:src="@drawable/ic_plus"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/toggleGroup"
            android:padding="3dp"
            app:checkedIconVisible="false"
            app:chipIcon="@drawable/ic_shopping_basket"
            android:text="Dodaj do listy zakupów"
            android:alpha="0"
            android:elevation="3dp"
            app:chipBackgroundColor="@color/checked"
            android:checkable="true"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toTopOf="@id/cardView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:shapeAppearance="@style/My1ShapeAppearance"
            />
    </androidx.constraintlayout.motion.widget.MotionLayout>
</layout>