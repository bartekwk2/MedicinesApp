<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">


    <view
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/canvas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/canvas2"
        class="io.skyway.Peer.Browser.Canvas"/>

    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toStartOf="@id/canvas"
        android:fontFamily="@font/poppinsbold"
        android:textColor="@color/black"
        android:text="ROZMOWA VIDEO"/>

    <TextView
        android:id="@+id/name"
        app:layout_constraintTop_toBottomOf="@id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toStartOf="@id/canvas"
        android:fontFamily="@font/poppinsmedium"
        android:textColor="@color/black"
        tools:text="Bartek Wielek"/>


    <view
        android:elevation="10dp"
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:id="@+id/canvas"
        class="io.skyway.Peer.Browser.Canvas"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <ImageView
        android:id="@+id/calling"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_call"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"/>

    <ImageView
        android:clickable="true"
        android:id="@+id/switchCameraAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_exchange"
        app:layout_constraintStart_toStartOf="@id/canvas"
        app:layout_constraintEnd_toEndOf="@id/canvas"
        app:layout_constraintTop_toBottomOf="@id/canvas"
        android:layout_marginTop="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>

