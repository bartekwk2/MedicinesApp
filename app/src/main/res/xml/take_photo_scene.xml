<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start" />

    <ConstraintSet android:id="@+id/end">
        <Constraint android:id="@+id/cardView2" >
            <Layout
                android:layout_marginTop="10dp"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </Constraint>

        <Constraint android:id="@+id/text1">
            <PropertySet android:alpha="0"/>
        </Constraint>

        <Constraint android:id="@+id/header">
            <PropertySet android:alpha="0"/>
        </Constraint>

        <Constraint android:id="@+id/headerimage">
            <PropertySet android:alpha="0"/>
        </Constraint>

        <Constraint android:id="@+id/image">
            <PropertySet android:alpha="0"/>
        </Constraint>

        <Constraint android:id="@+id/animationView">
            <PropertySet android:alpha="1"/>
        </Constraint>

        <Constraint android:id="@+id/viewFinder">
            <PropertySet android:alpha="1"/>
        </Constraint>
        <Constraint android:id="@+id/text3">
            <PropertySet android:alpha="0"/>
        </Constraint>
        <Constraint android:id="@+id/text4">
            <PropertySet android:alpha="1"/>
        </Constraint>

        <Constraint android:id="@+id/out_name">
            <PropertySet android:alpha="0"/>
        </Constraint>
    </ConstraintSet>


    <ConstraintSet android:id="@+id/start">
        <Constraint android:id="@id/viewFinder" />
    </ConstraintSet>

</MotionScene>
